<div class="contents row">
  <div class="container">
    <h2>Sign up</h2>
    <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :nickname %> <em>(50文字以内)</em><br />
        <%= f.text_field :nickname, autofocus: true, placeholder:"例) ランニング太郎", maxlength: "50",id:"nickname" %>
      </div>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email,placeholder:"PC・携帯どちらでも可",id:"email" %>
      </div>

      <div class="field">
        <%= f.label :password %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %>文字以上)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off",placeholder:"6文字以上の半角英数字", id:"password" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off",placeholder:"同じパスワードを入力して下さい",id:"password-confirmation" %>
      </div>

      <div class="field">
        <%= f.label :profile %> <em></em><br />
        <%= f.text_area :profile, autofocus: true, maxlength: "160",id:"user-profile" %>
      </div>

      <div class="field">
        <%= f.label :birth_day %> <em></em><br />
      </div>
      <div class='input-birth-wrap'>
        <%= raw sprintf(
                  f.date_select(
                    :birth_day,
                    class:'select-birth',
                    id:"birth-date",
                    use_month_numbers: true,
                    prompt:'--',
                    start_year: 1930,
                    end_year: (Time.now.year - 5),
                    date_separator: '%s'),
                  "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
      </div>

      <div class="field">
        <%= f.label :time %>(フルマラソン自己ベスト) <em></em><br />
      </div>
      <div class='input-name-wrap'>
      <%= f.text_field :hour_time, class:"input-name", id:"hour-time", placeholder:"例) 3" %><p>時間</p>
      <%= f.text_field :min_time, class:"input-name", id:"min-time", placeholder:" 00" %><p>分</p>
      <%= f.text_field :sec_time, class:"input-name", id:"sec-time", placeholder:" 00" %><p>秒</p>
      </div>

      <div class="actions">
        <%= f.submit "Sign up" %>
      </div>
    <% end %>
  </div>
</div>